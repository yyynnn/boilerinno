{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "rootDir": "./",
        "module": "ES2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": false,
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "checkJs": false,
        "declaration": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
        "paths": {},
        "sourceMap": true,
        "target": "es5"
    },
    "include": ["packages/root-app/src/**/*.ts", "packages/root-app/src/**/*.tsx", "node_modules/@elastic/apm-rum/src/index.d.ts"]
}
